<Window x:Class="TitleFormatter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TitleFormatter"
        mc:Ignorable="d"
        Title="Title Formatter" Height="180" Width="350">
    <Grid>
        <StackPanel>
            <TextBlock Width="300" Height="20">
    Type a title and press Enter to copy to the clipboard
            </TextBlock>
            <TextBox Width="300" Height="30" Name="textBox1"
           KeyDown="OnKeyDownHandler" TextChanged="textBox1_TextChanged"/>
            <TextBlock Width="300" Height="100" FontFamily="Courier New" Name="textBlock1"/>
        </StackPanel>
    </Grid>
</Window>
